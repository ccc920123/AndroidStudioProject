<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <View
        android:id="@+id/otherView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/exitLogin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_top_round_selector"
            android:drawableLeft="@drawable/user2"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="50dp"
            android:text="切换账号" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:background="#F1F1F1" />

        <Button
            android:id="@+id/exitSystem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_bottom_round_selector"
            android:drawableLeft="@drawable/off2"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="50dp"
            android:text="退出APP" />
    </LinearLayout>

    <View
        android:id="@+id/otherView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>